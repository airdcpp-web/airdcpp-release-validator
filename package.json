{
  "name": "airdcpp-release-validator",
  "version": "1.1.1",
  "description": "Scan downloaded and shared release directories for missing/extra files",
  "license": "MIT",
  "author": {
    "name": "maksis"
  },
  "keywords": [
    "airdcpp",
    "airdcpp-extensions",
    "airdcpp-extensions-public"
  ],
  "bugs": "https://github.com/maksis/airdcpp-release-validator/issues/",
  "repository": {
    "type": "git",
    "url": "https://github.com/maksis/airdcpp-release-validator"
  },
  "scripts": {
    "build": "npm run clean && npm run webpack:prod",
    "clean": "rimraf dist",
    "start": "node devtools/watch.js ../dist/main.js",
    "prepublishOnly": "npm run build",
    "webpack": "webpack",
    "webpack:prod": "cross-env NODE_ENV=production webpack",
    "webpack:prof": "cross-env NODE_ENV=production PROFILING=1 webpack",
    "test": "jest"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/plugin-transform-async-to-generator": "^7.12.1",
    "@babel/plugin-transform-runtime": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "@babel/runtime": "^7.12.5",
    "airdcpp-extension": "^1.4.0-beta",
    "airdcpp-extension-settings": "^1.1.0",
    "async-file": "^2.0.2",
    "babel-core": "^7.0.0-bridge.0",
    "babel-loader": "^8.1.0",
    "core-js": "^3.7.0",
    "cross-env": "^7.0.2",
    "eol": "^0.9.0",
    "eslint": "^7.13.0",
    "eslint-config-prettier": "^6.15.0",
    "jest-cli": "^26.6.3",
    "nodemon": "^2.0.6",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "source-map-support": "^0.5.19",
    "webpack": "^5.4.0",
    "webpack-cli": "^4.2.0"
  },
  "main": "dist/main.js",
  "airdcpp": {
    "apiVersion": 1,
    "minApiFeatureLevel": 4,
    "signalReady": true
  },
  "pre-commit": [
    "test"
  ],
  "jest": {
    "coverageDirectory": "./coverage/",
    "coveragePathIgnorePatterns": [
      "/dist/",
      "/node_modules/",
      "/tests/"
    ],
    "collectCoverage": true,
    "modulePaths": [
      "<rootDir>/src/",
      "<rootDir>/tests/"
    ]
  }
}
